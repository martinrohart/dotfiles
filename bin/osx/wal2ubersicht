
#!/usr/bin/env bash

###

# -- wal2ubersicht
# updates Übersicht stylesheet with wal colors

main() {
  # append wal colors
  cat "$HOME/.cache/wal/colors.css" >> "$HOME/dotfiles/conf/osx/ubersicht/widgets/nerdbar.widget/colors.css"
  osascript -e 'tell application "Übersicht" to refresh'
}

main "$@"

